
  <% if @post.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>
      <ul>
      <% @post.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  
  
  <div class='row'>
    <div class='col-md-12'>
      <%= form_for(@post) do |f| %>
      <div class='form-horizontal'>
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
           <%= f.label :name %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :name, class: "control-control", placeholder: "Name",autofocus: true %>
        </div>
      </div>
    
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :title %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :title, class: "control-control",placeholder: "Title" %>
        </div>
      </div>
        
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :content%>
        </div>
        <div class='col-sm-10'>
          <%= f.text_area :content, rows:10, class: "control-control",placeholder: "Content" %>
        </div>
      </div>
        
        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit class:'btn btn-primary btn-lg' %>
        </div>
        </div>
        </div>
      <% end %>
    </div>
    
  </div>