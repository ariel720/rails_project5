<h1 align=center>Sign up</h1>
 
 
  <div class='row'>
    <div class='col-md-12'>
      <%= form_for(@user) do |f| %>
      <div class='form-horizontal'>
    
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :username %>
        </div>
        <div class='col-sm-10'>
          <%= f.text_field :username, class: "control-control",placeholder: "username" %>
        </div>
      </div>
        
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :email%>
        </div>
        <div class='col-sm-10'>
          <%= f.email_field :email, class: "control-control",placeholder: "email" %>
        </div>
      </div>
      
      <div class='form-group'>
        <div class='col-sm-2 control-label'>
          <%= f.label :password%>
        </div>
        <div class='col-sm-10'>
          <%= f.password_field :password, class: "control-control",placeholder: "password" %>
        </div>
      </div>
        
        <div class='form-group'>
          <div class='col-sm-offset-2 col-sm-10'>
          <%= f.submit "Sign up", class:'btn btn-primary btn-lg' %>
        </div>
        </div>
        </div>
      <% end %>
    </div>
    
  </div>